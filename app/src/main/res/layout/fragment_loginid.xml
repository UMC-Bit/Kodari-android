<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDCC68">

    <ImageView
        android:id="@+id/login_logo_iv"
        android:layout_width="237dp"
        android:layout_height="237dp"
        android:src="@drawable/bit_logo"
        android:layout_marginTop="-230dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/login_logo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 편리한 자산 관리"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="-12dp"
        app:layout_constraintTop_toBottomOf="@id/login_logo_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/loginid_id_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="25dp"
        android:background="@null"
        android:hint="아이디를 입력해 주세요."
        android:textColorHint="#36000000"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_logo_tv" />

    <View
        android:id="@+id/loginid_id_underscore_view"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="15dp"
        android:background="#FFF6F6"
        app:layout_constraintStart_toStartOf="@id/loginid_id_et"
        app:layout_constraintEnd_toEndOf="@id/loginid_id_et"
        app:layout_constraintTop_toBottomOf="@id/loginid_id_et" />

    <TextView
        android:id="@+id/loginid_forget_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="아이디를 잊으셨나요?"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/loginid_id_underscore_view"
        app:layout_constraintStart_toStartOf="@id/loginid_id_underscore_view" />

    <Button
        android:id="@+id/loginin_next_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="다음"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FDCC68"
        android:backgroundTint="#FFF6F6"
        android:background="@drawable/button_white"
        app:layout_constraintTop_toBottomOf="@id/loginid_forget_id_tv" />

    <TextView
        android:id="@+id/loginid_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코다리"
        android:textColor="#75000000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginBottom="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>