<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_representative_coin_management_coin_list_image_CV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_representative_coin_management_coin_list_image_IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/btc"
            android:scaleType="fitCenter"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_representative_coin_management_coin_list_coin_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비트코인"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@id/item_representative_coin_management_coin_list_image_CV"
        app:layout_constraintTop_toTopOf="@id/item_representative_coin_management_coin_list_image_CV"
        app:layout_constraintBottom_toTopOf="@id/item_representative_coin_management_coin_list_coin_symbol_TV"/>

    <TextView
        android:id="@+id/item_representative_coin_management_coin_list_coin_symbol_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="7sp"
        app:layout_constraintStart_toEndOf="@id/item_representative_coin_management_coin_list_image_CV"
        app:layout_constraintBottom_toBottomOf="@id/item_representative_coin_management_coin_list_image_CV"
        app:layout_constraintTop_toBottomOf="@id/item_representative_coin_management_coin_list_coin_name_TV"/>

    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/item_representative_coin_management_coin_upbit_price_TV"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="56,000,000"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/item_representative_coin_management_coin_list_bitfinex_price_TV"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="56,000,000"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/item_representative_coin_management_coin_list_kimchi_premium_TV"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="4.6%"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/item_representative_coin_management_coin_list_select_on_IV"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/select_on_button"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/item_representative_coin_management_coin_list_image_CV"
        app:layout_constraintBottom_toBottomOf="@id/item_representative_coin_management_coin_list_image_CV"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/item_representative_coin_management_coin_list_select_off_IV"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/select_off_button"
        app:layout_constraintTop_toTopOf="@id/item_representative_coin_management_coin_list_image_CV"
        app:layout_constraintBottom_toBottomOf="@id/item_representative_coin_management_coin_list_image_CV"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>