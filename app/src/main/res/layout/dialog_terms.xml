<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/terms_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="이용약관"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
        </FrameLayout>

    </ScrollView>
    <Button
        android:id="@+id/terms_success_btn"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="동의"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/terms_fail_btn"
        app:layout_constraintTop_toBottomOf="@id/terms_container"
        android:layout_marginTop="20dp"
        android:background="@color/main_color"/>

    <Button
        android:id="@+id/terms_fail_btn"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="취소"
        app:layout_constraintStart_toEndOf="@id/terms_success_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/terms_container"
        android:layout_marginTop="20dp"
        android:background="@color/gray"/>
</androidx.constraintlayout.widget.ConstraintLayout>