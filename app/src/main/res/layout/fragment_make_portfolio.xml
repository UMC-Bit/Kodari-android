<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_my_info_container_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    tools:context=".Main.MakePortfolioFragment">

    <TextView
        android:id="@+id/make_portfolio_asset_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/my_asset"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/make_portfolio_restart_iv"
        app:layout_constraintBottom_toBottomOf="@id/make_portfolio_asset_title_tv"
        app:layout_constraintStart_toEndOf="@id/make_portfolio_asset_title_tv"
        app:layout_constraintTop_toTopOf="@id/make_portfolio_asset_title_tv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/restart" />

    <ImageView
        android:id="@+id/make_portfolio_mark_on_iv"
        app:layout_constraintBottom_toBottomOf="@id/make_portfolio_restart_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/make_portfolio_restart_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/mark_on" />


    <TextView
        android:id="@+id/make_portfolio_my_asset_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/make_portfolio_mark_on_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="999,999,999원"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/maek_portfolio_start_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/make_portfolio_my_asset_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_outline_yellow"
        android:padding="10dp"
        android:text="@string/start_btn"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/make_portfolio_text_day_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="12월 28일 기준"
        android:textSize="11sp" />


</androidx.constraintlayout.widget.ConstraintLayout>
