<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDCC68">

    <ImageView
        android:id="@+id/login_id_logo_iv"
        android:layout_width="237dp"
        android:layout_height="237dp"
        android:src="@drawable/bit_logo"
        android:layout_marginTop="-230dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/login_id_logo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 편리한 자산 관리"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="-12dp"
        app:layout_constraintTop_toBottomOf="@id/login_id_logo_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/login_id_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="25dp"
        android:background="@null"
        android:hint="아이디를 입력해주세요."
        android:inputType="text"
        android:textColorHint="#36000000"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_id_logo_tv" />

    <View
        android:id="@+id/login_id_underscore_view"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="#FFF6F6"
        app:layout_constraintStart_toStartOf="@id/login_id_et"
        app:layout_constraintEnd_toEndOf="@id/login_id_et"
        app:layout_constraintTop_toBottomOf="@id/login_id_et" />


    <Button
        android:id="@+id/login_id_next_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="다음"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#FDCC68"
        android:backgroundTint="#FFF6F6"
        android:background="@drawable/button_ywhite"
        app:layout_constraintTop_toBottomOf="@id/login_id_underscore_view" />

    <TextView
        android:id="@+id/login_id_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코다리"
        android:textColor="#75000000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginBottom="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/login_id_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/x_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>