<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/item_possession_coin_management_coin_list_image_IV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btc"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_possession_coin_management_coin_list_coin_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비트코인"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@id/item_possession_coin_management_coin_list_image_IV"
        app:layout_constraintTop_toTopOf="@id/item_possession_coin_management_coin_list_image_IV"
        app:layout_constraintBottom_toTopOf="@id/item_possession_coin_management_coin_list_coin_symbol_TV"/>

    <TextView
        android:id="@+id/item_possession_coin_management_coin_list_coin_symbol_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="7sp"
        app:layout_constraintStart_toEndOf="@id/item_possession_coin_management_coin_list_image_IV"
        app:layout_constraintBottom_toBottomOf="@id/item_possession_coin_management_coin_list_image_IV"
        app:layout_constraintTop_toBottomOf="@id/item_possession_coin_management_coin_list_coin_name_TV"/>

    <TextView
        android:id="@+id/item_possession_coin_management_coin_list_price_TV"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:text="57,100,000"
        android:textSize="10sp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/item_possession_coin_management_coin_list_profit_plus_TV"
        app:layout_constraintTop_toTopOf="@id/item_possession_coin_management_coin_list_image_IV"
        app:layout_constraintBottom_toBottomOf="@id/item_possession_coin_management_coin_list_image_IV"/>

    <TextView
        android:id="@+id/item_possession_coin_management_coin_list_profit_plus_TV"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="+6,100,1000"
        android:textSize="10sp"
        android:textColor="#FF493E"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_possession_coin_management_coin_list_image_IV"
        app:layout_constraintBottom_toBottomOf="@id/item_possession_coin_management_coin_list_image_IV"/>

    <TextView
        android:id="@+id/item_possession_coin_management_coin_list_priceAvg_TV"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:text="51,000,000"
        android:textSize="10sp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/item_possession_coin_management_coin_list_profit_plus_TV"
        app:layout_constraintTop_toTopOf="@id/item_possession_coin_management_coin_list_image_IV"
        app:layout_constraintBottom_toBottomOf="@id/item_possession_coin_management_coin_list_image_IV"/>

    <TextView
        android:id="@+id/item_possession_coin_management_coin_list_profit_minus_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 6,100,100"
        android:textSize="10sp"
        android:textColor="#0DB1F0"
        android:layout_marginLeft="132dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/item_possession_coin_management_coin_list_image_IV"
        app:layout_constraintTop_toTopOf="@id/item_possession_coin_management_coin_list_image_IV"
        app:layout_constraintBottom_toBottomOf="@id/item_possession_coin_management_coin_list_image_IV"/>


    <ImageView
        android:id="@+id/item_possession_coin_management_coin_list_select_off_IV"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/select_off_button"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@id/item_possession_coin_management_coin_list_image_IV"
        app:layout_constraintBottom_toBottomOf="@id/item_possession_coin_management_coin_list_image_IV"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/item_possession_coin_management_coin_list_select_on_IV"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/select_on_button"
        android:layout_marginRight="30dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/item_possession_coin_management_coin_list_image_IV"
        app:layout_constraintBottom_toBottomOf="@id/item_possession_coin_management_coin_list_image_IV"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>