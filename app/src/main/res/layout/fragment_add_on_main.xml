<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_on_main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="애드온"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/profile_main_bg_cl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/button_gray"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_on_main_title_tv"
        android:layout_marginTop="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/add_on_main_rect_cl"
                android:layout_width="345dp"
                android:layout_height="490dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/add_on_main_calender_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/calender"
                    app:layout_constraintBottom_toBottomOf="@id/add_on_main_calender_content_tv"
                    app:layout_constraintEnd_toStartOf="@id/add_on_main_calender_content_tv"
                    app:layout_constraintTop_toTopOf="@id/add_on_main_calender_content_tv" />

                <TextView
                    android:id="@+id/add_on_main_calender_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="20dp"
                    android:text="캘린더"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/add_on_main_calender_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="일정을 쉽게 관리할 수 있는 \n기능을  제공합니다."
                    android:textColor="#868484"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/add_on_main_calender_title_tv"
                    app:layout_constraintTop_toBottomOf="@id/add_on_main_calender_title_tv" />

                <View
                    android:id="@+id/add_on_main_bar1_vw"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="30dp"
                    android:background="#EDEBEB"
                    app:layout_constraintTop_toBottomOf="@id/add_on_main_calender_content_tv" />

                <ImageButton
                    android:id="@+id/add_on_main_btn1_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:src="@drawable/yellow_next_btn"
                    app:layout_constraintBottom_toBottomOf="@id/add_on_main_bar1_vw"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/add_on_main_alram_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/alram"
                    app:layout_constraintBottom_toBottomOf="@id/add_on_main_alram_content_tv"
                    app:layout_constraintEnd_toStartOf="@id/add_on_main_alram_content_tv"
                    app:layout_constraintTop_toTopOf="@id/add_on_main_alram_content_tv" />

                <TextView
                    android:id="@+id/add_on_main_alram_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="20dp"
                    android:text="등록 코인 시세 알림 설정"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_on_main_bar1_vw" />

                <TextView
                    android:id="@+id/add_on_main_alram_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="특정 지정가에 도달하면 \n자동 알림을 제공합니다."
                    android:textColor="#868484"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/add_on_main_alram_title_tv"
                    app:layout_constraintTop_toBottomOf="@id/add_on_main_alram_title_tv" />

                <View
                    android:id="@+id/add_on_main_bar2_vw"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="30dp"
                    android:background="#EDEBEB"
                    app:layout_constraintTop_toBottomOf="@id/add_on_main_alram_content_tv" />

                <ImageButton
                    android:id="@+id/add_on_main_btn2_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:src="@drawable/yellow_next_btn"
                    app:layout_constraintBottom_toBottomOf="@id/add_on_main_bar2_vw"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/add_on_main_bar1_vw" />

                <ImageView
                    android:id="@+id/add_on_main_soaring_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/soaring"
                    app:layout_constraintBottom_toBottomOf="@id/add_on_main_soaring_content_tv"
                    app:layout_constraintEnd_toStartOf="@id/add_on_main_soaring_content_tv"
                    app:layout_constraintTop_toTopOf="@id/add_on_main_soaring_content_tv" />


                <TextView
                    android:id="@+id/add_on_main_soaring_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="20dp"
                    android:text="폭락 폭등 알림 설정"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_on_main_bar2_vw" />

                <TextView
                    android:id="@+id/add_on_main_soaring_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="일정을 쉽게 관리할 수 있는 \n기능을 제공합니다."
                    android:textColor="#868484"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/add_on_main_soaring_title_tv"
                    app:layout_constraintTop_toBottomOf="@id/add_on_main_soaring_title_tv" />

                <View
                    android:id="@+id/add_on_main_bar3_vw"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="30dp"
                    android:background="#EDEBEB"
                    app:layout_constraintTop_toBottomOf="@id/add_on_main_soaring_content_tv" />

                <ImageButton
                    android:id="@+id/add_on_main_btn3_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:src="@drawable/yellow_next_btn"
                    app:layout_constraintBottom_toBottomOf="@id/add_on_main_bar3_vw"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/add_on_main_bar2_vw" />


                <ImageView
                    android:id="@+id/add_on_main_twitter_alram_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/twitter_alram"
                    app:layout_constraintBottom_toBottomOf="@id/add_on_main_twitter_alram_content_tv"
                    app:layout_constraintEnd_toStartOf="@id/add_on_main_twitter_alram_content_tv"
                    app:layout_constraintTop_toTopOf="@id/add_on_main_twitter_alram_content_tv" />


                <TextView
                    android:id="@+id/add_on_main_twitter_alram_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="20dp"
                    android:text="트위터 알림 설정"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_on_main_bar3_vw" />

                <TextView
                    android:id="@+id/add_on_main_twitter_alram_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="실시간 알고싶은 트위터 알림 \n기능을 제공합니다."
                    android:textColor="#868484"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/add_on_main_twitter_alram_title_tv"
                    app:layout_constraintTop_toBottomOf="@id/add_on_main_twitter_alram_title_tv" />

                <ImageButton
                    android:id="@+id/add_on_main_btn4_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:src="@drawable/yellow_next_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/add_on_main_bar3_vw" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>