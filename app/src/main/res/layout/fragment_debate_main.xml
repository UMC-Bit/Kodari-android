<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Debate.DebateMainFragment"
    android:background="@drawable/btn_outline_gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/debate_main_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debate"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/debate_main_coin_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="도지코인"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/debate_main_title_tv"/>


        <ImageView
            android:id="@+id/debate_main_more_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_more"
            app:layout_constraintStart_toEndOf="@id/debate_main_title_tv"
            app:layout_constraintTop_toTopOf="@id/debate_main_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/debate_main_title_tv"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/debate_main_write_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글 쓰기"
            android:textColor="@color/black"
            android:textSize="12.5sp"
            android:background="@drawable/btn_outline_yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/debate_main_coin_name_tv"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="19dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="visible"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/debate_main_input_cl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/debate_main_write_btn_tv"
            app:layout_constraintTop_toTopOf="@id/debate_main_write_btn_tv"
            app:layout_constraintBottom_toBottomOf="@id/debate_main_write_btn_tv">

            <TextView
                android:id="@+id/debate_main_find_coin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="원하시는 코인을 검색하세요"
                android:background="@drawable/btn_outline_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"/>

            <ImageView
                android:id="@+id/debate_main_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/move_button"
                app:layout_constraintEnd_toEndOf="@id/debate_main_find_coin"
                app:layout_constraintTop_toTopOf="@id/debate_main_find_coin"
                app:layout_constraintBottom_toBottomOf="@id/debate_main_find_coin"
                android:layout_marginEnd="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



