<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/possession_coin_add_CV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/possession_coin_add_before_button_IV"
                android:layout_width="28dp"
                android:layout_height="31dp"
                android:background="@drawable/before_button"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/possession_coin_add_complete_button_TV"
                android:layout_width="56dp"
                android:layout_height="34dp"
                android:text="완료"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_outline"
                android:backgroundTint="#B3FDCC68"
                app:layout_constraintTop_toTopOf="@id/possession_coin_add_before_button_IV"
                app:layout_constraintBottom_toBottomOf="@id/possession_coin_add_before_button_IV"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/possession_coin_add_domestic_exchange_TV"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="국내 거래소"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="51dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/possession_coin_add_before_button_IV"/>

            <TextView
                android:id="@+id/possession_coin_add_exchange_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="업비트"
                android:layout_marginRight="40dp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/possession_coin_add_domestic_exchange_TV"
                app:layout_constraintBottom_toBottomOf="@id/possession_coin_add_domestic_exchange_TV" />

            <androidx.cardview.widget.CardView
                android:id="@+id/possession_coin_add_exchange_logo_CV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toStartOf="@id/possession_coin_add_exchange_name_TV"
                app:layout_constraintTop_toTopOf="@id/possession_coin_add_exchange_name_TV"
                app:layout_constraintBottom_toBottomOf="@id/possession_coin_add_exchange_name_TV">

                <ImageView
                    android:id="@+id/possession_coin_add_exchange_logo_IV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/upbit_logo"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/possession_coin_add_first_dividing_line_IV"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#B3D3D3D3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/possession_coin_add_domestic_exchange_TV" />

            <TextView
                android:id="@+id/possession_coin_add_sort_TV"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="종목"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/possession_coin_add_first_dividing_line_IV" />

                <ImageView
                    android:id="@+id/possession_coin_add_coin_image_IV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/btc"
                    android:background="#FFFFFF"
                    app:layout_constraintTop_toTopOf="@id/possession_coin_add_coin_name_TV"
                    app:layout_constraintBottom_toBottomOf="@id/possession_coin_add_coin_symbol_TV"
                    app:layout_constraintEnd_toStartOf="@id/possession_coin_add_coin_name_TV"/>

            <TextView
                android:id="@+id/possession_coin_add_coin_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비트코인"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/possession_coin_add_sort_TV"
                app:layout_constraintBottom_toTopOf="@id/possession_coin_add_coin_symbol_TV"/>

            <TextView
                android:id="@+id/possession_coin_add_coin_symbol_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC"
                android:textStyle="bold"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/possession_coin_add_sort_TV"
                app:layout_constraintTop_toBottomOf="@id/possession_coin_add_coin_name_TV"
                app:layout_constraintStart_toStartOf="@id/possession_coin_add_coin_name_TV"/>

            <TextView
                android:id="@+id/possession_coin_add_second_dividing_line_IV"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#B3D3D3D3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/possession_coin_add_sort_TV"/>

            <TextView
                android:id="@+id/possession_coin_add_account_TV"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="계좌"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/possession_coin_add_second_dividing_line_IV"/>

            <TextView
                android:id="@+id/possession_coin_add_account_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="졸업좀 하자"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_marginRight="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/possession_coin_add_account_TV"
                app:layout_constraintBottom_toBottomOf="@id/possession_coin_add_account_TV" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/possession_coin_add_CV"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/possession_coin_add_price_TV"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="15sp"
                android:text="가격"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/possession_coin_add_averageunit_price_input_CV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="28dp"
                app:cardCornerRadius="24dp"
                app:layout_constraintBottom_toBottomOf="@id/possession_coin_add_price_TV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/possession_coin_add_price_TV"
                app:layout_constraintTop_toTopOf="@id/possession_coin_add_price_TV"
                app:layout_constraintVertical_bias="0.7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/possession_coin_add_price_input_ET"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:drawablePadding="6dp"
                        android:textColorHint="#FF584E"
                        android:hint="ex) 13,000"
                        android:textSize="11sp"
                        android:inputType="number"
                        android:background="#80D3D3D3"
                        android:paddingLeft="17dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    </com.google.android.material.textfield.TextInputEditText>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/possession_coin_add_quantity_TV"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="15sp"
                android:text="수량"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/possession_coin_add_price_TV"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/possession_coin_add_quantity_input_CV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="28dp"
                app:cardCornerRadius="24dp"
                app:layout_constraintBottom_toBottomOf="@id/possession_coin_add_quantity_TV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/possession_coin_add_price_TV"
                app:layout_constraintTop_toTopOf="@id/possession_coin_add_quantity_TV"
                app:layout_constraintVertical_bias="0.7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/possession_coin_add_quantity_input_ET"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:drawablePadding="6dp"
                        android:textColorHint="#FF584E"
                        android:hint="ex) 7.32"
                        android:textSize="11sp"
                        android:inputType="number"
                        android:background="#80D3D3D3"
                        android:paddingLeft="17dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    </com.google.android.material.textfield.TextInputEditText>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/possession_coin_add_date_CV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                app:cardCornerRadius="24dp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/possession_coin_add_quantity_TV"
                app:layout_constraintStart_toStartOf="@id/possession_coin_add_quantity_TV"
                app:layout_constraintVertical_bias="0.7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/possession_coin_add_date_input_ET"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="#80D3D3D3"
                        android:drawableRight="@drawable/yellow_next_btn"
                        android:hint="일자"
                        android:inputType="text"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:textColorHint="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    </com.google.android.material.textfield.TextInputEditText>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/possession_coin_add_fee_CV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                app:cardCornerRadius="24dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/possession_coin_add_date_CV"
                app:layout_constraintStart_toStartOf="@id/possession_coin_add_date_CV"
                app:layout_constraintVertical_bias="0.7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/possession_coin_add_fee_input_ET"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="#80D3D3D3"
                        android:drawableRight="@drawable/yellow_next_btn"
                        android:hint="수수료"
                        android:inputType="number"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:textColorHint="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </com.google.android.material.textfield.TextInputEditText>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/possession_coin_add_can_modify_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수동으로 수정 가능합니다."
                android:textColor="#FF584E"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/possession_coin_add_fee_CV"
                app:layout_constraintStart_toStartOf="@id/possession_coin_add_fee_CV"/>


            <TextView
                android:id="@+id/possession_coin_add_memo_dividing_line_TV"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="51dp"
                android:background="#B3D3D3D3"
                app:layout_constraintTop_toBottomOf="@id/possession_coin_add_can_modify_TV" />

            <TextView
                android:id="@+id/possession_coin_add_memo_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메모"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/possession_coin_add_memo_dividing_line_TV" />

            <androidx.cardview.widget.CardView
                android:id="@+id/possession_coin_add_memo_input_CV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="28dp"
                app:cardCornerRadius="24dp"
                app:layout_constraintStart_toEndOf="@id/possession_coin_add_memo_TV"
                app:layout_constraintTop_toTopOf="@+id/possession_coin_add_memo_TV"
                app:layout_constraintBottom_toBottomOf="@id/possession_coin_add_memo_TV"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/possession_coin_add_memo_input_ET"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:drawablePadding="6dp"
                        android:textColorHint="#FF584E"
                        android:hint="기억하고 싶은 내용을 입력해주세요."
                        android:textSize="11sp"
                        android:inputType="text"
                        android:maxLength="100"
                        android:background="#80D3D3D3"
                        android:paddingLeft="17dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    </com.google.android.material.textfield.TextInputEditText>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>