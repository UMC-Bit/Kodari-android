<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDCC68">

    <ImageView
        android:id="@+id/login_logo_iv"
        android:layout_width="237dp"
        android:layout_height="237dp"
        android:src="@drawable/bit_logo"
        android:layout_marginTop="-230dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/login_logo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 편리한 자산 관리"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="-12dp"
        app:layout_constraintTop_toBottomOf="@id/login_logo_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/login_sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="회원 가입"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FDCC68"
        android:backgroundTint="#FFF6F6"
        android:background="@drawable/button_ywhite"
        app:layout_constraintTop_toBottomOf="@id/login_logo_tv" />

    <Button
        android:id="@+id/login_sign_in_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="아이디 로그인"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#B35C5C5C"
        android:backgroundTint="#FDCC68"
        app:layout_constraintTop_toBottomOf="@id/login_sign_up_btn"
        style="?android:attr/borderlessButtonStyle"/>


    <TextView
        android:id="@+id/login_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코다리"
        android:textColor="#75000000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginBottom="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>