<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="15dp"
    android:paddingTop="15dp"
    android:paddingEnd="15dp">

    <ImageView
        android:id="@+id/coin_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/coin_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:text="Name"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@id/coin_symbol_tv"
            app:layout_constraintTop_toTopOf="@id/coin_iv"
            app:layout_constraintStart_toEndOf="@id/coin_iv"/>

        <TextView
            android:id="@+id/coin_symbol_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/coin_name_tv"
            app:layout_constraintBottom_toBottomOf="@id/coin_iv"
            app:layout_constraintStart_toEndOf="@id/coin_iv"
            android:layout_marginStart="8dp"
            android:textSize="7sp"
            android:text="BTC"/>

    <ImageView
        android:id="@+id/coin_select_btn_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/next_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/coin_iv"
        app:layout_constraintBottom_toBottomOf="@id/coin_iv"
        android:layout_marginEnd="30dp"/>

    <ImageView
        android:id="@+id/coin_line_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="3dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>