<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/btn_outline_white">

    <TextView
        android:id="@+id/user_block_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="해당 유저를 차단하시겠습니까?"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_block_line_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/user_block_message_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="23dp"/>

    <Button
        android:id="@+id/user_block_dialog_delete_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="46dp"
        android:layout_height="27dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_click_ripple"
        android:text="확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_block_line_iv" />

    <Button
        android:id="@+id/user_block_dialog_cancel_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="46dp"
        android:layout_height="27dp"
        android:text="취소"
        android:background="@drawable/button_click_ripple"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_block_line_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>