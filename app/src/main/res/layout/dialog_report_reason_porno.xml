<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_report_reason_sell_CV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--        radius 15-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_report_reason_porno_title_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="70dp"
                android:bufferType="spannable"
                android:text="음란물/불건전한 대화 게시물"
                android:textColor="#000000"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dialog_report_reason_porno_content_1_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="신고는 반대의견을 나타내는 기능이 아닙니다."
                android:textSize="13sp"
                android:textAlignment="center"
                android:textColor="#F36E6E"
                app:layout_constraintTop_toBottomOf="@id/dialog_report_reason_porno_title_TV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/dialog_report_reason_porno_content_2_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신고 사유에 맞지 않는 신고를 했을 경우, 해당 신고는 처리되지 않습니다."
                android:textSize="13sp"
                android:textAlignment="center"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/dialog_report_reason_porno_content_1_TV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/delete_line_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:src="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_report_reason_porno_content_2_TV">

            </ImageView>
            <TextView
                android:id="@+id/dialog_report_reason_porno_cancel_TV"
                android:layout_width="46dp"
                android:layout_height="27dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_click_ripple"
                android:gravity="center"
                android:text="취소"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/dialog_report_reason_porno_title_TV"
                app:layout_constraintTop_toBottomOf="@id/delete_line_iv" />


            <TextView
                android:id="@+id/dialog_report_reason_porno_confirm_TV"
                android:layout_width="46dp"
                android:layout_height="27dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="확인"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/dialog_report_reason_porno_title_TV"
                app:layout_constraintTop_toBottomOf="@id/delete_line_iv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>