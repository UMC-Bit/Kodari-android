<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <ImageView
        android:id="@+id/my_coin_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/my_info_container_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/my_coin_iv">
        <TextView
            android:id="@+id/my_coin_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:text="Name"/>

        <TextView
            android:id="@+id/my_coin_symbol_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="BTC"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_price_container_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/my_info_container_ll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_now_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50,000,000"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:ellipsize="marquee"
            android:layout_marginStart="15dp"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/my_profit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-35,000,000"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:ellipsize="marquee"
            android:layout_marginStart="15dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/my_unit_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="51,000,000"
            android:textSize="10sp"
            android:ellipsize="marquee"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_weight="1"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>